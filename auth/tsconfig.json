{
  "compilerOptions": {
    // Output structure
    "rootDir": "./src",
    "outDir": "./build",

    // Node.js + ES Modules
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",

    // Node types
    "lib": ["esnext"],
    "types": ["node"],

    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Type safety
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Modules
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "moduleDetection": "force",

    // Skip lib checks
    "skipLibCheck": true
  },
  "include": ["src"]
}
