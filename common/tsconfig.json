{
  "compilerOptions": {
    "outDir": "./build",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}
